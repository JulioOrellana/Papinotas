{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "~src/*" : ["src/*"],
            "~components/*" : ["src/components/*"]
        }
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "types": [
        "react",
        "react-native",
        "jest"
    ],
    "exclude": [
        "android",
        "ios",
        "node_modules"
    ],
    "compileOnSave": true
}